{{#each user }}

    <form style="margin: 150px;" class="ui form middle aligned center aligned" method="post" action="/user/update/{{id}}">
        <h2 class="ui header">
            <div class="ui orange  header">
                Update user
            </div>
        </h2>
        <div class="field row">
            <label>First Name</label>
            <input type="text" name="name" placeholder="First Name" value={{name}}>
        </div>
        <div class="field row">
            <label>Age</label>
            <input type="number" name="age" placeholder="age" value={{age}}>
        </div>
        <div class="field row">
            <label>Gender</label>
            <input disabled name="gender" readonly placeholder="Gender" value={{gender}}>
        </div>
{{/each}}

    <button class="ui button" type="submit">Update</button>
</form>

